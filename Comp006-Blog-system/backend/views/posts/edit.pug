extends ../layouts/main

block content
  .row.justify-content-center
    .col-md-8
      .card
        .card-header
          h4 Edit Post
        .card-body
          form(method="POST", action=`/posts/${post._id}?_method=PUT`)
            .mb-3
              label.form-label(for="title") Title
              input.form-control#title(type="text", name="title", value=post.title, required)
            .mb-3
              label.form-label(for="content") Content
              textarea.form-control#content(name="content", rows="5", required)= post.content
            .mb-3
              label.form-label(for="tags") Tags (comma separated)
              input.form-control#tags(type="text", name="tags", value=post.tags.join(', '))
            button.btn.btn-primary(type="submit") Update Post